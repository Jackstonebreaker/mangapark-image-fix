{
  "manifest_version": 3,
  "name": "MangaPark Toolkit",
  "version": "1.0.0",
  "default_locale": "en",
  "description": "Fix broken chapter images by rewriting s00â€“s10 /media URLs to the current domain. Includes toggle, debug, allowed sites, and a one-shot 'Fix this page'.",
  "action": {
    "default_title": "MangaPark Toolkit",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab", "scripting", "downloads"],
  "host_permissions": [
    "*://mangapark.com/*",
    "*://*.mangapark.com/*",
    "*://mangapark.org/*",
    "*://*.mangapark.org/*",
    "*://mangapark.net/*",
    "*://*.mangapark.net/*",
    "*://mangapark.me/*",
    "*://*.mangapark.me/*",
    "*://comicpark.com/*",
    "*://*.comicpark.com/*",
    "*://comicpark.org/*",
    "*://*.comicpark.org/*",
    "*://comicpark.net/*",
    "*://*.comicpark.net/*",
    "*://comicpark.me/*",
    "*://*.comicpark.me/*",
    "*://readpark.com/*",
    "*://*.readpark.com/*",
    "*://readpark.org/*",
    "*://*.readpark.org/*",
    "*://readpark.net/*",
    "*://*.readpark.net/*",
    "*://readpark.me/*",
    "*://*.readpark.me/*",
    "*://parkmanga.com/*",
    "*://*.parkmanga.com/*",
    "*://parkmanga.org/*",
    "*://*.parkmanga.org/*",
    "*://parkmanga.net/*",
    "*://*.parkmanga.net/*",
    "*://parkmanga.me/*",
    "*://*.parkmanga.me/*",
    "*://mpark.com/*",
    "*://*.mpark.com/*",
    "*://mpark.org/*",
    "*://*.mpark.org/*",
    "*://mpark.net/*",
    "*://*.mpark.net/*",
    "*://mpark.me/*",
    "*://*.mpark.me/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://mangapark.com/*",
        "*://*.mangapark.com/*",
        "*://mangapark.org/*",
        "*://*.mangapark.org/*",
        "*://mangapark.net/*",
        "*://*.mangapark.net/*",
        "*://mangapark.me/*",
        "*://*.mangapark.me/*",
        "*://comicpark.com/*",
        "*://*.comicpark.com/*",
        "*://comicpark.org/*",
        "*://*.comicpark.org/*",
        "*://comicpark.net/*",
        "*://*.comicpark.net/*",
        "*://comicpark.me/*",
        "*://*.comicpark.me/*",
        "*://readpark.com/*",
        "*://*.readpark.com/*",
        "*://readpark.org/*",
        "*://*.readpark.org/*",
        "*://readpark.net/*",
        "*://*.readpark.net/*",
        "*://readpark.me/*",
        "*://*.readpark.me/*",
        "*://parkmanga.com/*",
        "*://*.parkmanga.com/*",
        "*://parkmanga.org/*",
        "*://*.parkmanga.org/*",
        "*://parkmanga.net/*",
        "*://*.parkmanga.net/*",
        "*://parkmanga.me/*",
        "*://*.parkmanga.me/*",
        "*://mpark.com/*",
        "*://*.mpark.com/*",
        "*://mpark.org/*",
        "*://*.mpark.org/*",
        "*://mpark.net/*",
        "*://*.mpark.net/*",
        "*://mpark.me/*",
        "*://*.mpark.me/*"
      ],
      "js": ["injected_patch.js", "content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
